/**
 * @file
 * @brief Defines build version macros for deltaFlow and its dependencies.
 *
 * This header defines the software version macros, which are substituted at build time by CMake.
 * These macros can be used for logging, diagnostics, or display in user interfaces.
 */

#ifndef DELTAFLOW_VERSION_H
#define DELTAFLOW_VERSION_H
 
/**
  * @def CMake_VERSION
  * @brief The version of CMake used to configure the build.
  *
  * This macro is replaced by the value of `@CMAKE_VERSION@` during configuration.
  */
#define CMake_VERSION "@CMAKE_VERSION@"

/**
  * @def gcc_VERSION
  * @brief The version of the C++ compiler used.
  *
  * This macro is replaced by the value of `@CMAKE_CXX_COMPILER_VERSION@` during configuration.
  */
#define gcc_VERSION "@CMAKE_CXX_COMPILER_VERSION@"

/**
  * @def deltaFlow_VERSION
  * @brief The version of the deltaFlow project.
  *
  * This macro is replaced by the value of `@PROJECT_VERSION@` as defined in the top-level CMakeLists.txt.
  */
#define deltaFlow_VERSION "@PROJECT_VERSION@"

#endif
